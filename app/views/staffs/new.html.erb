<%# render "/parts/mainnav" %>


<div class="container-fluid">

<h1 class="text-center"> Hey, awesome! </br> 
	   Welcome aboard <%= @user.first_name %> </br>
	   <small> Real quick, connect with your organization </small>
</h1>
</br>
</br>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= simple_form_for @staff do |f| %>
		  <% f.input :user_id, html: { type: 'hidden', value: '@user.id' } %>
		  <%= f.input :organization_id, collection: @organizations, prompt: "Select your organization" %>
		  <%= f.button :submit, "Connect" %>
		<% end %>
	</br>
	<h4>
		 <%= link_to "Not right now, just take me to the search!", search_path %>
	</h4>	 
	</div>	
</div>

<%# fields_for :staffs, method: :post do |s| %>
  <%# hidden_field_tag(:user_id, @user) %>
  <%# select(:organization, :organization_id, @organizations) %>
    <%# s.submit "Connect" %>
  <%# end %>



</div>