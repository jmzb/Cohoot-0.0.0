<%= simple_form_for(@location) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :loc_name %>
    <%= f.input :loc_street %>
    <%= f.input :loc_city %>
    <%= f.input :loc_state %>
    <%= f.input :loc_zip %>
    <%= f.input :organization_id, collection: Organization.all, label_method: :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
